---
- name: Install MySQL
  apt: package={{ item }} state=installed force=yes update_cache=yes cache_valid_time=3600
  when: ansible_os_family == 'Debian'
  with_items:
    - mysql-server
    - python-mysqldb
  tags:
    - db

- name: Deletes anonymous MySQL server user for host
  mysql_user: user="" state="absent" host="{{clc_svr.servers[0].name}}"
  tags:
    - db

- name: Deletes anonymous MySQL server user for localhost
  mysql_user: user="" state="absent"
  tags:
    - db

- name: Removes the MySQL test database
  mysql_db: name=test state=absent
  tags:
    - db

- name: Update mysql root password
  mysql_user:
    name: root
    host: "{{ item }}"
    password: "{{ mysqlpass }}"
    login_user: root
    login_password: ""
    check_implicit_admin: yes
    priv: "*.*:ALL,GRANT"
  with_items:
    - "{{clc_svr.servers[0].name}}"
    - 127.0.0.1
    - ::1
    - localhost
  tags:
    - db

- name: Create an owncloud database
  mysql_db: name=owncloud state=present login_password="{{ mysqlpass }}" login_user=root
  tags:
    - db
  notify: Restart MySQL
